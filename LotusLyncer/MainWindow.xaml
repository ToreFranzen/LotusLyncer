<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="LotusLyncer.MainWindow"
        Title="MainWindow" Height="412.791" Width="627.642" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="52*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*"/>
            <ColumnDefinition Width="240*"/>
            <ColumnDefinition Width="193*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Lotus Notes Password:" VerticalAlignment="Center" Margin="0,8,10,9" HorizontalAlignment="Right" Height="26" Width="129"/>
        <Label Content="Update Frequency (in Minutes):" VerticalAlignment="Center" Margin="0,9,10,9" Grid.Row="1" HorizontalAlignment="Right" Height="26" Width="175"/>
        <PasswordBox x:Name="passwordBox" VerticalAlignment="Center" Grid.Column="1" Margin="10,12,10,11" Height="20"/>
        <TextBox x:Name="updateFrequencyTextBox" Height="20" TextWrapping="Wrap" Text="5" Margin="10,12" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1"/>
        <TextBlock TextWrapping="Wrap" Text="Lync Status: " Margin="0,14,16,10"  VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="5" Height="16" Width="66"/>
        <TextBlock TextWrapping="Wrap"  x:Name="clientStateTextBlock" Margin="10,14,10,6" Text="Client State Loading..." VerticalAlignment="Center" Grid.Column="1" Grid.Row="5" Height="20"/>
        <TextBlock TextWrapping="Wrap" Text="Meeting Message:" VerticalAlignment="Center" Margin="0,13,10,10" HorizontalAlignment="Right" Grid.Row="2" Height="20" Width="97"/>
        <TextBlock TextWrapping="Wrap" Text="Availability During Meeting:" VerticalAlignment="Center" Margin="0,10,15,17" HorizontalAlignment="Right" Grid.Row="4" Height="16" Width="147"/>
        <ComboBox Margin="5,10,15,13" VerticalAlignment="Center" x:Name="availabilityComboBox" Grid.Column="1" Grid.Row="4" Height="20"/>
        <Button x:Name="buttonStartSync" Content="Start Sync" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75" Click="buttonStartSync_Click" Margin="10,20,0,10" Grid.Column="1" Grid.Row="8" Height="22"/>
        <TextBox x:Name="messageTextBox" TextWrapping="Wrap" VerticalAlignment="Center" Margin="10,9,10,12" Text="In a Meeting" Grid.Column="1" Grid.Row="2" Height="22"/>
        <TextBlock TextWrapping="Wrap" Text="Current Location:" VerticalAlignment="Center" Margin="0,10,16,8" HorizontalAlignment="Right" Grid.Row="7" Height="16" Width="91"/>
        <Separator HorizontalAlignment="Left" Height="1" Margin="0,0,0,39" Grid.Row="5" VerticalAlignment="Bottom" Width="620" Grid.ColumnSpan="3" />
        <TextBlock x:Name="locationTextBlock" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="7" TextWrapping="Wrap" Text="Location Loading..." VerticalAlignment="Top" Height="16" Width="99"/>
        <Button x:Name="buttonStopSync" Content="Stop Sync" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75" Click="buttonStopSync_Click" Margin="150,20,0,10" Grid.Column="1" Grid.Row="8" Height="22"/>
        <CheckBox x:Name="notesTitleCheckBox" Content="Use Notes Meeting Title" Grid.Column="2" HorizontalAlignment="Left" Margin="10,13,0,0" Grid.Row="2" VerticalAlignment="Top" Checked="notesTitleCheckBox_Checked" Unchecked="notesTitleCheckBox_Unchecked" Height="16" Width="145"/>
        <TextBlock TextWrapping="Wrap" Text="Current Message:" VerticalAlignment="Center" Margin="0,13,15,11" HorizontalAlignment="Right" Grid.Row="6" Height="16"/>
        <TextBlock x:Name="messageTextBlock" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="6" TextWrapping="Wrap" Text="Meessage Loading..." VerticalAlignment="Top" Height="16"/>
        <TextBlock TextWrapping="Wrap" Text="Meeting Location:" VerticalAlignment="Center" Margin="0,10,16,14" HorizontalAlignment="Right" Grid.Row="3" Height="20" Width="97"/>
        <TextBox x:Name="locationTextBox" TextWrapping="Wrap" VerticalAlignment="Center" Margin="10,7,10,15" Text="Undisclosed Location" Grid.Column="1" Grid.Row="3" Height="22"/>
        <CheckBox x:Name="notesLocationCheckBox" Content="Use Notes Meeting Location" Grid.Column="2" HorizontalAlignment="Left" Margin="10,14,0,0" Grid.Row="3" VerticalAlignment="Top" Checked="notesTitleCheckBox_Checked" Unchecked="notesTitleCheckBox_Unchecked" Height="16"/>

    </Grid>
</Window>
